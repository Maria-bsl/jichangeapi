            data: JSON.stringify({ 'id': eid, 'sno': cid }),
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (data) {
                if (data != null) {
                    message = data + ' Successfully Deleted';
                    type = 'success';

                }
                notifyMessage(message, type);
                bindempDetails_Buser();
            }
        })

    }



</script>


