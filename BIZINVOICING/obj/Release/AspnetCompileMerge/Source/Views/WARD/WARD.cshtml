            type: 'POST',
            url: '@Url.Action("DeleteWard", "WARD")',
            data: params,
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (data) {
                hideModal('modal-smtp');
                if (opType == 'D' && data) {
                    if (data == true) {
                        message = st + ' Ward is in Use,Cannot be Deleted.';
                        type = 'danger';
                    }
