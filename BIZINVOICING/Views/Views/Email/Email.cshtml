    function bindEmail_Email() {
        jQuery.ajax({
            type: 'POST',
            url: '@Url.Action("GetEmailDetails", "Email")',
            data: '{}',
            contentType: 'application/json; charset=utf-8',
            dataType: 'json',
            success: function (data) {
                jQuery("#tbl-smtp tbody").empty();
