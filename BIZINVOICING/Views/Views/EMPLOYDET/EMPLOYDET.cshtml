    function delchruchemp_Buser(e) {
        var x = confirm("Are you sure you want to delete?");
        if (x) {
            jQuery('#hdnEmployee').val('D');
            cid = jQuery(e).data('sid');
            var eid = jQuery(e).data('sid');
            deletechemp_Buser(cid, eid);
            return true;
        }
        else
